<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:background="@color/xanh_nhat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.main.fragment.change_password.ChangePasswordFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:background="@android:color/transparent"
                    android:id="@+id/imgBack"
                    android:src="@drawable/back_icon"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:text="Thay đổi mật khẩu"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_green_light"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtOldPassword"
                        android:inputType="textPassword"
                        android:hint="Nhập vào mật khẩu cũ"
                        android:textColorHint="@color/black"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/imgOldVisible"
                        android:layout_gravity="center|end"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtNewPassword"
                        android:inputType="textPassword"
                        android:hint="Nhập lại mật khẩu"
                        android:textColorHint="@color/black"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/imgNewVisible"
                        android:layout_gravity="center|end"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edtNewPasswordConfirm"
                        android:inputType="textPassword"
                        android:hint="Nhập vào mật khẩu cũ"
                        android:textColorHint="@color/black"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/imgNewVisibleConfirm"
                        android:layout_gravity="center|end"
                        android:layout_margin="20dp"
                        android:src="@drawable/ic_visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <Button
                    android:id="@+id/btnChange"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/green"
                    android:text="Đổi mật khẩu"
                    android:paddingHorizontal="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>