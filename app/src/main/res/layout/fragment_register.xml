<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".view.auth.fragment.register.RegisterFragment">
                <LinearLayout
                    android:id="@+id/llBack"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_circle"
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:src="@drawable/ic_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/imgLogo"
                    android:src="@color/white"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Đăng ký"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edtFullname"
                        android:hint="Nhập vào họ và tên"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:inputType="text"
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edtEmail"
                        android:hint="Nhập vào email"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:inputType="text"
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edtPassword"
                            android:inputType="textPassword"
                            android:hint="Nhập vào mật khẩu"
                            android:textColorHint="@color/black"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/imgVisible"
                            android:layout_gravity="center|end"
                            android:layout_margin="20dp"
                            android:src="@drawable/ic_visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edtPasswordConfirm"
                            android:inputType="textPassword"
                            android:hint="Nhập lại mật khẩu"
                            android:textColorHint="@color/black"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/imgVisibleConfirm"
                            android:layout_gravity="center|end"
                            android:layout_margin="20dp"
                            android:src="@drawable/ic_visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <EditText
                        android:id="@+id/edtPhone"
                        android:hint="Nhập vào số điện thoại"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:maxLength="10"
                        android:layout_margin="15dp"
                        android:textColorHint="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/edtAddress"
                        android:hint="Nhập vào địa chỉ"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:maxLength="255"
                        android:textColorHint="@color/black"
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:text="Phòng ban"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:layout_weight="7"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/spnDepartment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:text="Vị trí"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:layout_weight="7"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/spnRole"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnRegister"
                        android:background="@drawable/bg_rounded"
                        android:backgroundTint="@color/green"
                        android:text="Đăng ký"
                        android:paddingHorizontal="20dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="gone"/>
    </FrameLayout>
</layout>